<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#e4fde4"
             >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:id="@+id/buttonNameForBioritm"
        android:background="@drawable/draw"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="физический"
            android:id="@+id/textView"
            android:textColor="#0000ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFiz"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="эмоциональный"
            android:id="@+id/textView2"
            android:textColor="#ff0000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAmo"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="интеллектуальный"
            android:id="@+id/textView3"
            android:textColor="#00ff00"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInt"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28.12.1999"
        android:id="@+id/buttonDateForCalculate"
        android:background="@drawable/draw"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/graph" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="-10"
            android:id="@+id/buttonMinus10"
            android:background="@drawable/draw"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:id="@+id/buttonMinus1"
            android:background="@drawable/draw"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonRevert"
            android:background="@drawable/draw"
            android:layout_gravity="left|bottom"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:id="@+id/buttonPlus1"
            android:background="@drawable/draw"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:id="@+id/buttonPlus10"
            android:background="@drawable/draw"
            />

    </LinearLayout>

</LinearLayout>